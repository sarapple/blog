.bottom {
	margin-top: 2em;
	min-height: 10em;
}
.bg-grainy-gray {
	background-image: url('<%= asset_path("grayish.jpg") %> ');
	background-repeat: no-repeat;
	opacity: 0.7;
}
.form-post {
	border-radius: 1em;
}
input[type="textarea"]{
	height: 12em;
}
input[type="submit"]{
	background-color: RGB(66, 152, 181);
}
.form-border {
	border: 1px solid black;
}
.bg-color-chinook {
/*	background-color: RGB(74, 170, 165);*/
/*	background-image: url('<%= asset_path("grayish.jpg") %> ');*/
}
.bg-color-darkgray {
	background-color: RGB(53, 64, 79);
}
.bg-cyan {
	background-color: RGB(77, 194, 182);
}
.form-post {
	border: 2px solid gray;
}
.header-nav {
	color: RGB(91, 91, 91);
	font-size: 2em;
	background-color: RGB(238, 238, 238);
	border-bottom: 1px solid RGB(53, 64, 79);
}
	.header-nav button {
		color: RGB(91, 91, 91);
		margin-right: 1em;
		margin-left: 1em;
		background-color: RGB(238, 238, 238);
	}
	.header-nav a {
		color: RGB(91, 91, 91);
		margin-right: 1em;
		margin-left: 1em;
	}
.eachpost {
	margin-top: 1em;
	margin-bottom: 1em;
	padding: 1.5em;
	border-top: 1em solid RGB(53, 64, 79);
	border-bottom: 1em solid RGB(53, 64, 79);
}
	.eachpost .info {
		font-size: 1em;
	}
	.eachpost .title {
		color: RGB(91, 91, 91);
		padding-top: .5em;
		padding-bottom: .5em;
		font-size: 2em;
	}
	.eachpost .content {
		padding-top: .5em;
		font-size: 2.5em;
	}
	.eachpost:nth-child(3n+1){
		background-color: RGB(163, 211, 156);
		color: RGB(243, 134, 48);
	}
		.eachpost:nth-child(3n+1) .info {
			color: white;
		}
		.eachpost:nth-child(3n+1) .title {
			color: RGB(72, 49, 105);
		}
		.eachpost:nth-child(3n+1) .content {
			font-size: 2em;
			color: white;
		}	
	.eachpost:nth-child(3n+2) {
		background-color: RGB(250, 139, 96);
		color: white;
	}
	.eachpost:nth-child(3n){
		background-color: RGB(74, 170, 165);
		color: RGB(243, 134, 48);
	}
		.eachpost:nth-child(3n) .info {
			color: white;
		}
		.eachpost:nth-child(3n) .title {
			color: RGB(53, 64, 79);
		}
		.eachpost:nth-child(3n) .content {
			font-size: 2em;
			color: white;
		}		
.form-comment {
	background: none;
}
	.form-comment input[type="submit"]{
		display: none;
	}
body {
	background-image: url('<%= asset_path("poly.jpg") %> ');
    background-repeat: no-repeat;
    background-position: top center;
    background-attachment: fixed;
    width: 100%;
    height: 100%;
}