body {
	background-image: url('<%= asset_path("poly.jpg") %> ');
    background-repeat: no-repeat;
    background-position: top center;
    background-attachment: fixed;
    width: 100%;
    height: 100%;
}
.header-name {	
}
.header-nav {
	color: RGB(91, 91, 91);
	font-size: 2em;
	background-color: RGB(238, 238, 238);
	border-bottom: 1px solid RGB(53, 64, 79);
}
	.header-nav button {
		color: RGB(91, 91, 91);
		padding-right: 1em;
		padding-left: 1em;
		background-color: RGB(238, 238, 238);
	}
	.header-nav a {
		color: RGB(91, 91, 91);
	}
.form-post {
	border: 2px solid gray;
	border-radius: 1em;
}
	.form-post textarea{
		width: 100%;
		max-width: 100%;
		margin: auto;
		height: 12em;
	}
	.form-post input[type="text"]{
		padding-left: 5%;
		padding-right: 5%;
		text-align: left;
		width: 90%;
	}
	.form-post .submit {
		text-align: right;
	}
	.form-post input[type="submit"]{
		padding: .5em 2em .5em 2em;
		background-color: RGB(66, 152, 181);
	}
.bg-grainy-gray {
	background-image: url('<%= asset_path("grayish.jpg") %> ');
	background-repeat: no-repeat;
	opacity: 0.7;
}
.bg-color-darkgray {
	background-color: RGB(53, 64, 79);
}
.bg-cyan {
	background-color: RGB(77, 194, 182);
}
.eachpost {
	margin-top: 1em;
	margin-bottom: 1em;
	padding-top: 1.5em;
	padding-bottom: 1.5em;
	border-top: 1em solid RGB(53, 64, 79);
	border-bottom: 1em solid RGB(53, 64, 79);
}
	.eachpost .info {
		font-size: 1em;
	}
	.eachpost .title {
		color: RGB(91, 91, 91);
		padding-top: .5em;
		padding-bottom: .5em;
		border-bottom: 1px solid white;
		font-size: 2em;
	}
	.eachpost .content {
		padding-top: .5em;
		font-size: 2.5em;
	}
	.eachpost:nth-child(3n+1){
		background-color: RGB(163, 211, 156);
		color: RGB(243, 134, 48);
	}
		.eachpost:nth-child(3n+1) .info {
			color: white;
		}
		.eachpost:nth-child(3n+1) .title {
			color: RGB(72, 49, 105);
		}
		.eachpost:nth-child(3n+1) .content {
			font-size: 2em;
			color: white;
		}	
	.eachpost:nth-child(3n+2) {
		background-color: RGB(250, 139, 96);
		color: white;
	}
	.eachpost:nth-child(3n){
		background-color: RGB(74, 170, 165);
		color: RGB(243, 134, 48);
	}
		.eachpost:nth-child(3n) .info {
			color: white;
		}
		.eachpost:nth-child(3n) .title {
			color: RGB(53, 64, 79);
		}
		.eachpost:nth-child(3n) .content {
			font-size: 2em;
			color: white;
		}		
.comments * {
	color: RGB(53, 64, 79);
}
	.comment {
		padding: 1em;
	}
	.comment .message{
		background-color: beige;
		margin-top: 1em;
		padding: 1em;
		border: 1px solid RGB(212, 212, 212);
		border-radius: .4em;
	}
	.comment .top-left {
		display: inline-block;
	}
	.comment .top-left img {
		width: 3em;
		height: 3em;
	}
	.comment .top-right {
		display: inline-block;
	}
		.comment .top-right .username {
			padding-bottom: 1em;
			font-size: 1em;
		}
.form-comment {
	width: 100%;
	background: none;
}
.form-comment label {
	margin: auto;
}
	.form-comment label .name {
		color: RGB(53, 64, 79);
		font-size: 1.5em;
	}
	.form-comment label input {
		width: 100%
	}
	.form-comment label input[type="text"] {
		padding-left: 5%;
		padding-right: 5%;
		text-align: left;
	}
	.form-comment input[type="submit"]{
		display: none;
	}
.bottom {
	min-height: 3em;
}
